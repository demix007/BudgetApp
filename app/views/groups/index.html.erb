<div class="main category-container">
  <%@groups.each do |g|%>
  
    <div class="category category-container">
      <img class = "category-img" src=<%=g.icon%> alt="category-icon">

      <div class="flex">
        <%= link_to group_path(g.id), :remote => true do %>
          <h2 class = "category-name">
            <%=g.name%>
          </h2>
        <%end%>
        
        <h4 class = "category-creation-date">
          This group was created on:  <%=g.created_at%>
        </h4>
      </div>

      <div class="flex">
        <h2 class = "category-total">
          <%=g.self_total(g.id)%>
        </h2>
        <%= button_to "Delete", group_path(g.id), html: {'data-turbo' => "false"}, :method => :delete, class: "delete-btn btn btn-danger" %>
      </div>

    </div>
  <%end%>
  
  <%= link_to new_group_path, :remote => true do %>
    <input type="button" class="add-btn btn btn-primary last" value="Add New Category">
  <% end %>
</div>